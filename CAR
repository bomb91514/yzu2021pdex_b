#include <iostream>
#include <string>
using namespace std;
class CCAR {
private:
string nickname;
protected:
int light; 
/**限定特定的人存取（一個人以上）*/
int wheel;
*public: //任何地方的都可以使用
CCAR() :light(2)
{
wheel = 5; 
/**輪子有５個*/
*cout << "car's constructor(wheel=" << wheel << ")" << endl; 
/**建構子(不用呼叫)*/
}
CCAR(string nickname) :light(2)
{
wheel = 5;
this->nickname = nickname;
cout << "car's constructor(nickname=" << nickname << ")" << endl;
}
~CCAR()
/**解構子(離開記憶體前執行)*/
{
cout << "car's destructor" << "(" << nickname << ")" << endl;
}
void start()
{
cout << "car's start" << endl;
}
void stop()
{
cout << "car's stop" << endl;
}
void turn()
{
cout << "car's turn" << endl;
}
}; 
/**class敘述結束，大括號後加分號*/
//--------------------------
class CBMW : public CCAR {
public:
CBMW() { light = 4; wheel = 4; cout << "bmw's constructor" << endl; }
~CBMW() { cout << "bmw's destructor" << endl; }
void Abs()
{
*cout << "bmw's abs" << endl; 
/**增加新功能*/
}
void start()
{
cout << "bmw's start" << endl; 
/**修改舊功能*/
CCAR::start();//scope operator 
/**scope operator CCAR繼承BMW的bmw's start*/

}
};
//--------------------------
int main(int argc, const char * argv[]) {
CBMW bmw;
// bmw.light=3;
bmw.start();
bmw.Abs();
bmw.stop();

return 0;
}
